extends ../layout/base

include ../components/text-field/text-field
include ../components/dropdown/dropdown
include ../components/input/input
include ../components/range-slider/range-slider
include ../components/button/button
include ../components/input-group/input-group

block head
  link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
  title Form elements

block body
  - 
    const settings = {
      defaultTextField: {
        label: 'text field',
        id: 'text_field',
        ui_kit_state: 'default',
        placeholder: 'Email'
      },
      activeTextField: {
        label: 'text field',
        id: 'active_text_field',
        ui_kit_state: 'hover / focus',
        ui_kit_is_active: true,  
        value: 'This is pretty awesome'
      },
      dropdown: {
        type: 'applied-options',
        label: 'dropdown',
        id: 'dropdown',
        ui_kit_state: 'default',
        value: 'Сколько гостей',
      },
      maskedTextField: {
        label: 'masked text field',
        id: 'masked_text_field',
        is_masked: true,
        ui_kit_state: 'default',
        placeholder: 'ДД.ММ.ГГГГ'
      },
      multifieldDateDropdown: {
        type: 'miltifield-date-filter',
        label: ['date_dropdown', 'date_dropdown'],
        value: ['ДД.ММ.ГГГГ', '19.08.2019']
      },
      singlefieldDateDropdown: {
        type: 'singlefield-date-filter',
        label: 'filter date dropdown',
        value: '19 авг - 23 авг',
        id: 'filter_date_dropdown'
      },
      subscriptionTextField: {
        label: 'subscription text field',
        placeholder: 'Email',
        id: 'subscription_text_field',
        is_subscription: true
      },
      checkboxGroup: {
        name: 'Checkbox buttons',
        type: 'checkbox',
        group: [
          {
            content: 'Можно курить'
          },
          {
            content: 'Можно с питомцами',
            isChecked: true
          },
          {
            content: 'Можно пригласить гостей (до 10 человек)',
            isChecked: true
          }
        ]
      },
      radioGroup: {
        name: 'Radio Buttons',
        type: 'radio',
        meta: {
          name: 'sex',
          selected: 'man'
        },
        group: [
          {
            content: 'Мужчина',
            value: 'man'
          },
          {
            content: 'Женщина',
            value: 'woman'
          }
        ]
      },
      toggleGroup: {
        name: 'toggle',
        type: 'toggle',
        group: [
          {
            content: 'Получать спецпредложения',
            isChecked: true
          }, 
          {
            content: 'Получать спецпредложения'
          }
        ]
      },
      likeGroup: {
        name: 'like button',
        type: 'like',
        group: [
          {
            likesNumber: 2,
            isLiked: false
          },
          {
            likesNumber: 12,
            isLiked: true
          }
        ]
      },
      rateGroup: {
        name: 'rate button',
        type: 'rate',
        group: [
          {
            rating: 4
          },
          {
            rating: 5
          }
        ]
      },
      rangeSlider: {
        title: 'range slider',
        min: 0,
        max: 15000,
        from: 5000,
        to: 10000
      },
      buttonGroup: {
        name: 'buttons',
        type: 'button',
        group: [
          {
            type: 'primary',
            content: 'click me'
          },
          {
            type: 'primary',
            content: 'click me',
            isDisabled: true
          },
          {
            type: 'outlined',
            content: 'click me'
          },
          {
            type: 'outlined',
            content: 'click me',
            isDisabled: true
          },
          {
            type: 'primary-string',
            content: 'click me'
          },
          {
            type: 'string',
            content: 'click me'
          },
          {
            type: 'action',
            content: 'перейти к оплате'
          }
        ]
      }
    } 

  +text-field(settings.defaultTextField)
  +text-field(settings.activeTextField)
  +dropdown(settings.dropdown)
  +text-field(settings.maskedTextField)
  +dropdown(settings.multifieldDateDropdown)
  +dropdown(settings.singlefieldDateDropdown)
  +text-field(settings.subscriptionTextField)
  +input-group(settings.checkboxGroup)
  +input-group(settings.radioGroup)
  +input-group(settings.toggleGroup)
  +input-group(settings.likeGroup)
  +input-group(settings.rateGroup)
  +range-slider(settings.rangeSlider)
  +input-group(settings.buttonGroup)