extends ../layout/base

include ../components/text-field/text-field
include ../components/dropdown/dropdown
include ../components/input/input
include ../components/checkbox-group/checkbox-group
include ../components/radio-group/radio-group
include ../components/toggle-group/toggle-group
include ../components/like-button/like-button
include ../components/like-group/like-group
include ../components/rate-button/rate-button
include ../components/rate-group/rate-group
include ../components/range-slider/range-slider

block head
  link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
  title Form elements

block body
  - 
    const settings = {
      defaultTextField: {
        label: 'text field',
        id: 'text_field',
        ui_kit_state: 'default',
        placeholder: 'Email'
      },
      activeTextField: {
        label: 'text field',
        id: 'active_text_field',
        ui_kit_state: 'hover / focus',
        ui_kit_is_active: true,  
        value: 'This is pretty awesome'
      },
      dropdown: {
        type: 'applied-options',
        label: 'dropdown',
        id: 'dropdown',
        ui_kit_state: 'default',
        value: 'Сколько гостей',
      },
      maskedTextField: {
        label: 'masked text field',
        id: 'masked_text_field',
        is_masked: true,
        ui_kit_state: 'default',
        placeholder: 'ДД.ММ.ГГГГ'
      },
      multifieldDateDropdown: {
        type: 'miltifield-date-filter',
        label: ['date_dropdown', 'date_dropdown'],
        value: ['ДД.ММ.ГГГГ', '19.08.2019']
      },
      singlefieldDateDropdown: {
        type: 'singlefield-date-filter',
        label: 'filter date dropdown',
        value: '19 авг - 23 авг',
        id: 'filter_date_dropdown'
      },
      subscriptionTextField: {
        label: 'subscription text field',
        placeholder: 'Email',
        id: 'subscription_text_field',
        is_subscription: true
      },
      checkboxGroup: {
        title: 'Checkbox buttons',
        checkboxes: [
          {
            content: 'Можно курить'
          },
          {
            content: 'Можно с питомцами',
            isChecked: true
          },
          {
            content: 'Можно пригласить гостей (до 10 человек)',
            isChecked: true
          }
        ]
      },
      radioGroup: {
        title: 'Radio Buttons',
        name: 'sex',
        selected: 'man',
        radio_buttons: [
          {
            content: 'Мужчина',
            value: 'man'
          },
          {
            content: 'Женщина',
            value: 'woman'
          }
        ]
      },
      toggleGroup: {
        title: 'toggle',
        toggles: [
          {
            content: 'Получать спецпредложения',
            isChecked: true
          }, 
          {
            content: 'Получать спецпредложения'
          }
        ]
      },
      likeButton: {
        is_liked: true,
        likes_number: 2
      },
      likeGroup: {
        title: 'like button',
        likes: [
          {
            is_liked: false,
            likes_number: 2
          },
          {
            is_liked: true,
            likes_number: 12
          }
        ]
      },
      rateButton: 4,
      rateGroup: {
        title: 'rate button',
        rates: [4, 5]
      },
      rangeSlider: {
        title: 'range slider',
        min: 0,
        max: 15000,
        from: 5000,
        to: 10000
      }
    } 

  +text-field(settings.defaultTextField)
  +text-field(settings.activeTextField)
  +dropdown(settings.dropdown)
  +text-field(settings.maskedTextField)
  +dropdown(settings.multifieldDateDropdown)
  +dropdown(settings.singlefieldDateDropdown)
  +text-field(settings.subscriptionTextField)
  +checkbox-group(settings.checkboxGroup)
  +radio-group(settings.radioGroup)
  +toggle-group(settings.toggleGroup)
  +like-button(settings.likeButton)
  +like-group(settings.likeGroup)
  +rate-button(settings.rateButton)
  +rate-group(settings.rateGroup)
  +range-slider(settings.rangeSlider)