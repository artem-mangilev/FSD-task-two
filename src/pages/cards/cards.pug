extends ../../layout/base

include ../../components/date-dropdown/date-dropdown
include ../../components/search-card/search-card
include ../../components/registration-card/registration-card
include ../../components/login-card/login-card
include ../../components/booking-card/booking-card
include ../../components/room-card/room-card

block settings
  - const dark = true

block head
  link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
  title Cards

block body
  .cards
    .cards__cards-col
      .cards__card
        +search-card

      .cards__card
        +registration-card
      
    .cards__cards-col
      .cards__card
        +booking-card({
          roomNumber: 888,
          price: 9990,
          discount: 2179,
          additionalServices: 300,
          isLuxury: true,
          arrivalDate: '2020-08-19',
          departureDate: '2020-08-23',
          adultsNumber: 1,
          childsNumber: 1,
          infantsNumber: 1
        })
      
      .cards__card
        +login-card

    .cards__cards-col
      .cards__card
        +date-dropdown()(
          class='cards__date-dropdown'
          inline
        )

      .cards__card
        +room-card({
          number: 888,
          isLuxury: true,
          price: 9990,
          rating: 5,
          reviewsNumber: 145,
          images: [
            'room-1-preview.png',
            'room-1-preview.png',
            'room-1-preview.png',
            'room-1-preview.png'
          ]
        })

      .cards__card
        +room-card({
          number: 840,
          price: 9900,
          rating: 4,
          reviewsNumber: 65,
          images: [
            'room-840.png',
            'room-840.png',
            'room-840.png',
            'room-840.png'
          ]
        })
