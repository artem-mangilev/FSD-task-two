extends /layout/app-base/app-base

include /layout/header/header
include /layout/search-card/search-card
include /layout/complex-footer/complex-footer

include /components/text/text

block head
  title Landing page
  link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
  link(href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" rel="stylesheet")

block body
  - const { header, mainText, complexFooter } = require('./landing-page.json')
  
  .landing-page
    +header(header)
    main.landing-page__main
      +search-card.landing-page__search-card
      +text.landing-page__main-text= mainText
    +complex-footer(complexFooter)


      