extends ../../layout/base

include ../../components/text-field/text-field
include ../../components/dropdown/dropdown
include ../../components/range-slider/range-slider
include ../../components/button/button
include ../../components/input-group/input-group
include ../../components/pagination/pagination
include ../../components/bullet-list/bullet-list
include ../../components/features/features
include ../../components/comment/comment

include ../../components/checkbox/checkbox

block head
  link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
  title Form elements

block body
  - const settings = require('./form-elements.json')

  +text-field(settings.defaultTextField)(
    placeholder=settings.defaultTextField.placeholder
  )
  +text-field(settings.focusedTextField)(
    value=settings.focusedTextField.value
    autofocus=settings.focusedTextField.autofocus
  )
  //- +dropdown()
  +text-field(settings.maskedTextField)(
    placeholder=settings.maskedTextField.placeholder
  )
  //- +dropdown(settings.multifieldDateDropdown)
  //- +dropdown(settings.singlefieldDateDropdown)
  +text-field(settings.subscriptionTextField)(
    placeholder=settings.subscriptionTextField.placeholder
  )
  +input-group(settings.checkboxGroup)
  +input-group(settings.radioGroup)
  +input-group(settings.toggleGroup)
  +input-group(settings.likeGroup)
  +input-group(settings.rateGroup)
  +range-slider(settings.rangeSlider)
  +input-group(settings.buttonGroup)
  +input-group(settings.paginationGroup)
  +dropdown(settings.roomsDropdown.meta, settings.roomsDropdown.items)
  +dropdown(settings.guestsDropdown.meta, settings.guestsDropdown.items)
  //- +checkbox(settings.richCheckbox.content, settings.richCheckbox.description)
  +input-group(settings.richCheckboxGroup)
  +input-group(settings.expandableCheckboxGroup)
  +bullet-list(settings.bulletList.items, settings.bulletList.name)
  +features(settings.features)
  +comment(settings.comment)