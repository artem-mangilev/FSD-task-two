include ../field/field
include ../input/input

include ../button/button

//- dropdown types:
//- - item-quantity
//- - item-quantity-applied

//- If types === item-quantity
//- items:
//- [
//-   {
//-     nameForms, // array of forms
//-     quantity
//-   }
//- ]

mixin dropdown(meta, items)
  .dropdown.dropdown_bottom-borderless
    .dropdown__selection
      p.dropdown__selection-text Placeholder
    .dropdown__menu
      each item in items
        .dropdown__option
          h3.dropdown__item-name= item.name
          .dropdown__control
            button.dropdown__button.dropdown__decrement-button -
            .dropdown__quantity= item.quantity
            button.dropdown__button.dropdown__increment-button +


