include ../date-dropdown/date-dropdown
include ../dropdown/dropdown

mixin booking-card({ roomNumber, price, discount, additionalServices,  isLuxury, adultsNumber = 0, childsNumber = 0, infantsNumber = 0 })
  - 
    const {
      bookingDateDropdown,
      guestsDropdown
    } = require('../../components/booking-card/booking-card.json')

  .booking-card
    .booking-card__header
      span.booking-card__room
        span.booking-card__room-number №#{roomNumber}
        span.booking-card__luxury= isLuxury && 'Люкс'
      span.booking-card__price
        span.booking-card__price-number #{price}₽
        span.booking-card__period в сутки
    +date-dropdown(bookingDateDropdown.startLabel, bookingDateDropdown.endLabel)(
      placeholder=bookingDateDropdown.placeholder
    )

    - 
      const guests = [
        {
          "name": "взрослые",
          "quantity": adultsNumber
        },
        {
          "name": "дети",
          "quantity": childsNumber
        },
        {
          "name": "младенцы",
          "quantity": infantsNumber
        }
      ] 
    +dropdown(guestsDropdown.meta, guests)