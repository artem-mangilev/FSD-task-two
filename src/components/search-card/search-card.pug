include ../date-dropdown/date-dropdown
include ../dropdown/dropdown
include ../button/button

mixin search-card
  - 
    //- find out the way to require from this directory
    const {
      title,
      dateDropdown,
      dropdown,
      button 
    } = require(`../../components/search-card/search-card.json`)

  .search-card
    h1.search-card__title= title
    +date-dropdown(dateDropdown.startLabel, dateDropdown.endLabel)(
      placeholder=dateDropdown.placeholder
      class='search-card__date-dropdown'
    )
    +dropdown(dropdown.meta, dropdown.items)(
      class='search-card__dropdown'
    )
    +button(button.type, button.text)
