include ../like-button/like-button
include ../text/text

mixin comment({ authorName, publishedDate, avatarFile, likes, isLiked, commentText })
  .comment&attributes(attributes)
    .comment__author
      img(src=require(`@uploads/${avatarFile}`).default).comment__avatar
      p.comment__author-info
        span.comment__author-name= authorName
        time.comment__published-date= publishedDate
    .comment__comment-info
      +like-button(isLiked, likes).comment__like-button
      +text.comment__text= commentText
