include ../like-button/like-button

mixin comment({ authorName, publishedDate, avatarUrl, likes, isLiked, commentText })
  .comment
    .comment__author
      img(src=avatarUrl).comment__avatar
      p.comment__author-info
        span.comment__author-name= authorName
        time.comment__published-date= publishedDate
    .comment__comment-info
      +like-button(likes, isLiked).comment__like-button
      p.comment__text= commentText
